<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_signup"
        android:background="@drawable/logback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.user.shopzelo.SignupActivity">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_fname"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="First Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_lname"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Last Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_email"
            android:layout_marginTop="90dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="EmailId"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_address"
            android:layout_marginTop="130dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Street/Appartment Name"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/reg_city"
            android:layout_marginTop="170dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="City"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/reg_zip"
            android:layout_marginTop="170dp"
            android:background="#ffffff"
            android:ems="10"
            android:layout_marginLeft="170dp"
            android:hint="Zipcode"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_dob"
            android:layout_marginTop="220dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Date Of Birth"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_phoneno"
            android:layout_marginTop="280dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Phone no"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reg_password"
            android:layout_marginTop="340dp"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Have Account? Log In"
            android:textSize="18dp"
            android:id="@+id/login_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/join_button"
            android:text="Join now"
            android:layout_below="@+id/reg_password"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>
